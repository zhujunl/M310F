<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="cardTip">

        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">15px</item>
        <item name="android:textSize">16px</item>
        <item name="android:textColor">#333539</item>
    </style>
    <style name="cardLinear">
        <item name="android:layout_height">33px</item>
    </style>

    <style name="cardtxt">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_height">25px</item>
        <item name="android:layout_marginLeft">4px</item>
        <item name="android:layout_marginRight">17px</item>
    </style>

    <style name="btn_card">
        <item name="android:layout_marginTop">20px</item>
        <item name="android:layout_marginLeft">15px</item>
        <item name="android:layout_marginRight">15px</item>
        <item name="android:textSize">15px</item>
        <item name="android:textColor">#fff</item>
        <item name="android:background">@drawable/bg3</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">40px</item>

    </style>

</resources>
