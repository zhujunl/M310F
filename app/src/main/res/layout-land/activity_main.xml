<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg"
    android:orientation="vertical">

    <!-- 标题 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="@string/title_name"
            android:textColor="#00f"
            android:textSize="24sp" />
    </LinearLayout>

    <!-- 提示信息 -->

    <ScrollView
        android:id="@+id/scrollView_show_msg"
        android:layout_width="fill_parent"
        android:layout_height="300px"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="1dp"
        android:background="#0f000000"
        android:scrollbarStyle="outsideOverlay">

        <EditText
            android:id="@+id/edit_show_msg"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="13dip"
            android:layout_marginRight="13dip"
            android:background="@null"
            android:clickable="true"
            android:enabled="true"
            android:focusable="false"
            android:gravity="top"
            android:scrollbars="vertical"
            android:singleLine="false"
            android:text=""
            android:textColor="#fff"
            android:textSize="16sp" />
    </ScrollView>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@android:color/darker_gray" />
    <!-- 功能区 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dip"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="0dip">

        <ImageView
            android:id="@+id/image_idcard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:contentDescription="身份证"
            android:src="@drawable/card" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_cardFullInfo"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button"
                    android:onClick="OnClickCardFullInfo"
                    android:text="@string/btn_cardFullInfo" />

                <Button
                    android:id="@+id/btn_clearMsg"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button"
                    android:onClick="OnClickClearMsg"
                    android:text="@string/btn_clearMsg" />

                <Button
                    android:id="@+id/btn_devVersion"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button"
                    android:onClick="OnClickDevVersion"
                    android:text="@string/btn_devVersion" />

                <Button
                    android:id="@+id/btn_cardId"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button"
                    android:onClick="OnClickCardId"
                    android:text="@string/btn_cardId" />

                <Button
                    android:id="@+id/btn_SAMId"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button"
                    android:onClick="OnClickSAMId"
                    android:text="@string/btn_SAMId" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/scan_open"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="打开扫码"
                    android:textSize="25sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/button"
                    android:layout_height="80dp"
                    android:onClick="OnClickStartScan"/>
                <Button
                    android:id="@+id/scan_start"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="开始扫码"
                    android:textSize="25sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/button"
                    android:layout_height="80dp"
                    android:onClick="OnClickStartScan"/>
                <Button
                    android:id="@+id/scan_cnacel"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="取消扫码"
                    android:textSize="25sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/button"
                    android:layout_height="80dp"
                    android:onClick="OnClickCancelScan"/>
                <Button
                    android:id="@+id/scan_close"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="关闭扫码"
                    android:textSize="25sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/button"
                    android:layout_height="80dp"
                    android:onClick="OnClickStartScan"/>
            </LinearLayout>
            <Button
                android:id="@+id/finger_img"
                android:text="指纹图像采集"
                android:textSize="30sp"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/button"
                />

            <LinearLayout
                android:visibility="invisible"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_activeIcCard"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button"
                    android:onClick="OnClickActiveIcCard"
                    android:text="@string/btn_activeIcCard" />

                <Button
                    android:id="@+id/btn_verifyIcCard"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button"
                    android:onClick="OnClickVerifyIcCard"
                    android:text="@string/btn_verifyIcCard" />

                <Button
                    android:id="@+id/btn_readBlockIcCard"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button"
                    android:onClick="OnClickReadBlockIcCard"
                    android:text="@string/btn_readBlockIcCard" />

                <Button
                    android:id="@+id/btn_writeBlockIcCard"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button"
                    android:onClick="OnClickWriteBlockIcCard"
                    android:text="@string/btn_writeBlockIcCard" />
            </LinearLayout>


            <LinearLayout
                android:visibility="invisible"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dip"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="0dip">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="0dip"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/label_apdu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_apdu" />

                    <EditText
                        android:id="@+id/edit_apdu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:singleLine="true"
                        android:text="@string/edit_apdu" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_poweron"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button"
                    android:onClick="OnClickPowerON"
                    android:text="@string/btn_poweron" />

                <Button
                    android:id="@+id/btn_poweroff"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button"
                    android:onClick="OnClickPowerOFF"
                    android:text="@string/btn_poweroff" />

                <Button
                    android:id="@+id/btn_apdu"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button"
                    android:onClick="OnClickAPDU"
                    android:text="@string/btn_apdu" />
            </LinearLayout>


        </LinearLayout>




    </LinearLayout>





</LinearLayout>